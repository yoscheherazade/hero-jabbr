<div class="starter-template mt-5">
  <div class="lead">What's happening?</div>
</div>

<div class="col-md-6 m-auto">
  <form id="sendWoof">
    <input type="text" class="form-control" id="woof">
    <br>
    <button class="btn btn-primary">Post</button>
  </form>
  <br>
  <br>
  <div id="woofs">
    {{#each woofs}}
    <div class="media">
      <div class="media-left">
        <a href="/user/{{ owner._id }}">
          <img src="{{ owner.photo }}" alt="photo" class="media-object">
        </a>
      </div>
      <div class="media-body pl-3">
        <h4 class="media-heading">{{ owner.name }}</h4>
        <p>{{ content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>